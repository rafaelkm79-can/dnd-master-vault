{
  "devMode": false,
  "ignoreCodeBlockRestrictions": false,
  "preferredDateFormat": "YYYY-MM-DD",
  "firstWeekday": {
    "index": 1,
    "name": "Monday",
    "shortName": "Mo"
  },
  "syncInterval": 200,
  "enableJs": true,
  "viewFieldDisplayNullAsEmpty": false,
  "enableSyntaxHighlighting": true,
  "enableEditorRightClickMenu": true,
  "inputFieldTemplates": [
    {
      "name": "groupSelector",
      "declaration": "INPUT[inlineListSuggester(optionQuery(#Category/Group AND !\"zz-nexus/Templates\"))]"
    },
    {
      "name": "locationSelector",
      "declaration": "INPUT[inlineListSuggester(optionQuery(#Category/Location AND !\"zz-nexus/Templates\"))]"
    },
    {
      "name": "languages",
      "declaration": "INPUT[inlineListSuggester(option(Common), option(Common Sign Language), option(Draconic), option(Dwarvish), option(Elvish), option(Giant), option(Gnomish), option(Goblin), option(Halfling), option(Orc), option(Abyssal), option(Celestial), option(Deep Speech), option(Druidic), option(Infernal), option(Primordial - Auran), option(Primordial - Aqua), option(Primordial - Ignan), option(Primordial - Terran), option(Sylvan), option(Thieves Cant), option(Undercommon))]"
    },
    {
      "name": "relType",
      "declaration": "INPUT[suggester(option(Sibling), option(Parent), option(Child), option(Spouse), option(Lover), option(Friend), option(Rival), option(Mentor), option(Apprentice), option(Ally), option(Enemy), option(Employer), option(Employee), option(Commander), option(Subordinate), option(Protector), option(Ward), option(Political Opponent), option(Religious Superior), option(Ancestor), allowOther)]"
    },
    {
      "name": "playerStatus",
      "declaration": "INPUT[inlineSelect(\noption(Hiatus),\noption(Active),\noption(Retired))]"
    },
    {
      "name": "factionType",
      "declaration": "INPUT[suggester(option(Religious),option(Criminal),option(Social),option(Political),option(Mercenary),option(Industrial),option(Military) ,option(Tribal),option(Mercantile), allowOther)]"
    }
  ],
